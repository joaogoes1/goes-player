<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_bar_player_container"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@android:color/black">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/bottom_bar_player_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            tools:src="@drawable/ic_album"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bottom_bar_player_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/bottom_bar_player_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Nome da música em reprodução" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bottom_bar_player_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/bottom_bar_player_previous"
            app:layout_constraintTop_toBottomOf="@id/bottom_bar_player_title"
            app:layout_constraintStart_toStartOf="@id/bottom_bar_player_title"
            app:layout_constraintHorizontal_bias="0.0"
            tools:text="Nome do cantor" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/bottom_bar_player_previous"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/colorAccent"
            android:src="@drawable/ic_previous_white"
            app:layout_constraintTop_toTopOf="@id/bottom_bar_player_play"
            app:layout_constraintBottom_toBottomOf="@id/bottom_bar_player_play"
            app:layout_constraintEnd_toStartOf="@id/bottom_bar_player_play"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/bottom_bar_player_play"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintTop_toTopOf="@id/bottom_bar_player_skip_next"
            app:layout_constraintBottom_toBottomOf="@id/bottom_bar_player_skip_next"
            app:layout_constraintEnd_toStartOf="@id/bottom_bar_player_skip_next"
            tools:src="@drawable/ic_pause_white" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/bottom_bar_player_skip_next"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/colorAccent"
            android:src="@drawable/ic_next_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>